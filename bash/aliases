#
# Aliases configuration for Bash
#

# Usefull commands default options
alias ls='ls --color=auto'
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'

# System Administration
alias update-mirrorlist="sudo reflector --verbose --latest 200 --number 5 --protocol http --sort rate --save /etc/pacman.d/mirrorlist"

# Ruby development
alias be='bundle exec'
alias bi='bundle install --path=vendor/bundle --clean'
alias bu='bundle update'


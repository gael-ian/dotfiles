#
# Prompt configuration for Bash
#

prompt_prefix="\u@\h - \w"
prompt_suffix="\n\\\$"


## Git prompt configuration
if [ -n "$(type -t __git_ps1)" ] && [ "$(type -t __git_ps1)" = function ]
then

  # Show unstaged (*) and staged (+) changes 
  export GIT_PS1_SHOWDIRTYSTATE=1

  # Show if something is stashed ($)
  export GIT_PS1_SHOWSTASHSTATE=1

  # Show untracked (%) files
  export GIT_PS1_SHOWUNTRACKEDFILES=1

  # Show differences between HEAD and its upstream:
  # "<" indicates you are behind, ">" you are ahead, "<>" you have diverged and "=" that there is no difference
  export GIT_PS1_SHOWUPSTREAM=verbose

  # Show more information about the identity of commits checked out as a detached HEAD
  export GIT_PS1_DESCRIBE_STYLE=branch

  # Colored Git PS1 output
  export GIT_PS1_SHOWCOLORHINTS=1

  
  export PROMPT_COMMAND='__git_ps1 "$prompt_prefix" "$prompt_suffix "'

else

  # Fallback to a simpler prompt if __git_ps1 is not available
  export PS1="$prompt_prefix$prompt_suffix "

fi

